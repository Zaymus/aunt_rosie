<%- include('../partials/navbar/vertical-nav.ejs') %>

<div class="data">
  <h1 class="title"><%= product.product_name %></h1>

  <h2>New Batch</h2>
  <form action="/inventory/batch/<%= product.product_id %>" method="POST">
    <div class="batch-details">
      <span>
        <span class="bold">Quantity: </span>
        <input type="number" name="quantity" placeholder="13" min="1" max="300" step="1" required />
      </span>
       <span>
        <span class="bold">Location: </span>
        <select name="shelf">
          <% locations.forEach(location => { %>
            <option value="<%= location.dataValues.shelf_id %>">
              <%= location.dataValues.shelf_name %>
            </option>
          <% }) %>
        </select>
      </span>
    </div>
    <button type="submit">Create Batch</button>
  </form>
</div>

